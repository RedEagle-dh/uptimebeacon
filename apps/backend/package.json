{
	"name": "@uptimebeacon/backend",
	"version": "1.2.0-beta.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target bun",
		"dev": "bun run --watch src/index.ts",
		"start": "bun run src/index.ts",
		"typecheck": "tsc --noEmit",
		"check": "biome check .",
		"check:write": "biome check --write ."
	},
	"dependencies": {
		"@elysiajs/cors": "^1.1.0",
		"@elysiajs/cron": "^1.1.0",
		"@prisma/adapter-pg": "^7.0.0",
		"@prisma/client": "^7.0.0",
		"@uptimebeacon/database": "workspace:*",
		"bcryptjs": "^3.0.3",
		"elysia": "^1.1.0",
		"nodemailer": "^7.0.11",
		"pg": "^8.16.0",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/nodemailer": "^7.0.4",
		"bun-types": "latest",
		"typescript": "^5.8.2"
	}
}
